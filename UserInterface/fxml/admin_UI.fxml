<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>


<?import javafx.scene.layout.VBox?>
<fx:root type="AnchorPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AdminUIController">
   <children>
      <ToolBar prefHeight="40.0" prefWidth="900.0">
        <items>
          <Button mnemonicParsing="false" text="返回" />
        </items>
      </ToolBar>
      <AnchorPane layoutY="40.0" prefHeight="660.0" prefWidth="900.0">
          <children>
              <TabPane prefHeight="660.0" prefWidth="900.0">
                  <tabs>
                      <Tab closable="false" text="开始比赛">
                     <content>
                        <AnchorPane prefHeight="640.0" prefWidth="900.0">
                           <children>
                              <AnchorPane fx:id="start_game_page" prefHeight="640.0" prefWidth="900.0" />
                           </children>
                        </AnchorPane>
                     </content>
                  </Tab>
                  <Tab closable="false" text="本机工人">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="640.0" prefWidth="900.0">
                           <children>
                              <AnchorPane fx:id="machines_worker_page" prefHeight="640.0" prefWidth="900.0" />
                           </children>
                        </AnchorPane>
                    </content>
                  </Tab>
                  <Tab closable="false" text="设备信息">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <AnchorPane fx:id="machine_info_page" prefHeight="640.0" prefWidth="900.0" />
                           </children>
                        </AnchorPane>
                    </content>
                  </Tab>
                  <Tab closable="false" text="工人信息">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                          <children>
                              <VBox fx:id="vBox_worker_info" prefHeight="660.0" prefWidth="900.0" />
                          </children>
                        </AnchorPane>
                    </content>
                  </Tab>
                  <Tab closable="false" text="比赛历史">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <AnchorPane fx:id="game_history_page" prefHeight="640.0" prefWidth="900.0" />
                           </children>
                        </AnchorPane>
                    </content>
                  </Tab>
                  </tabs>
              </TabPane>
          </children>
      </AnchorPane>
   </children>
</fx:root>
